---
import Layout from "../../components/Layout.astro";
import ComicCard from "../../components/ComicCard.astro";

// Usa Astro.site.pathname come prefisso (es: "/magicflower")
const base = Astro.site.pathname;

const fumetti = [
  {
    titolo: "",
    cover: `${base}/fumetti/questione.jpg`,
    link: `${base}/fumetti/fumetto1`,
  },
  {
    titolo: "Costacciaro",
    cover: `${base}/fumetti/Costacciaro1.jpg`,
    link: `${base}/fumetti/fumetto2`,
  }
];
---

<Layout title="I miei fumetti â€“ Eleonora Mariani">
  <h1>I miei fumetti</h1>

  <div style="
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    margin-top: 20px;
  ">
    {fumetti.map((f) => <ComicCard {...f} />)}
  </div>
</Layout>