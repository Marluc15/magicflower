---
const { titolo, cover, link } = Astro.props;
---

<a href={link} style="
  display: block;
  text-decoration: none;
  color: var(--ink);
  background: white;
  padding: 12px;
  border-radius: 8px;
  border: 4px solid #111;
  box-shadow: 6px 6px 0px #000;
  transition: transform 0.15s ease-in-out;
">
  <img src={cover} alt={titolo} style="
    width: 100%;
    border-radius: 6px;
    border: 3px solid #111;
    display: block;
  ">

  <h3 style="
    text-align: center;
    margin-top: 12px;
    font-weight: 700;
  ">{titolo}</h3>
</a>