---
const { titolo, cover, link } = Astro.props;
---

<a class="card" href={link}>
  <div class="cover-wrapper">
    <img src={cover} alt={titolo} loading="lazy" />
  </div>
  {titolo && <h3>{titolo}</h3>}
</a>

<style>
  .card {
    display: block;
    text-decoration: none;
    color: inherit;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.7s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Contenitore con ratio fisso */
  .cover-wrapper {
    width: 100%;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    border-radius: 8px;
  }

  .cover-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  h3 {
    margin-top: 8px;
    font-size: 1rem;
    text-align: center;
  }
</style>